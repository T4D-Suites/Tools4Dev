

_t4dSrcWikiJsGraphQLCreatePage(){
# Generated From $Tools4Dev_PATH/Engine/G4d/templates.env
# v1.7.0
###### _t4dSrcWikiJsGraphQLCreate
#   - Name:
#       _t4dSrcWikiJsGraphQLCreate
###
#   - Synopsis:
#       return graphQL format to create a new page
###
#   - Usage:
#       _t4dSrcWikiJsGraphQLCreatePage <InputFile> <PageUrlPath> <PageUrlTitle> [PageUrlDescription] [PageUrlTags]
###
#   - Note:
#       <Required>
#       [Optionnal]
#       {XXXXXXX}       = Value To Be Changed, if {URL} then replace {URL} with a valid URL
###
###### DOCUMENTATION BLOC #####
########### CODE BLOC #########
    local _t4dErrorCode=1
    local _inputFile="$1"
    local _path="$2"
    local _title="$3"
    local _description="$4"
    local _tags="$5"
cat << EOF
mutation Page {
                pages {
                  create(
                    content: """$(cat $_inputFile)"""
                    description: "$_description"
                    editor: "markdown"
                    isPublished: true
                    isPrivate: false
                    locale: "en"
                    path: "$_path"
                    tags: ["$_tags"]
                    title: "$_title"
                ) {
                responseResult {
                    succeeded
                    errorCode
                    slug
                    message
                }
                page {
                    id
                    path
                    title
                }
            }
        }
    }
EOF
###############################
}

